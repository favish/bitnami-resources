# Environment Configuration for Production Discourse Deployment
# Copy this file to .env and configure your values

# Build information (optional)
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")

# Required: Discourse Configuration
DISCOURSE_HOSTNAME=discourse.yourcompany.com
DISCOURSE_SECRET_KEY_BASE=generate_a_64_char_secret_key_here

# Database Configuration
POSTGRES_PASSWORD=secure_database_password_here

# Email Configuration (required for production)
SMTP_ADDRESS=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Security Settings
FORCE_HTTPS=true

# Performance Tuning (adjust based on your server resources)
UNICORN_WORKERS=3
MAX_THREADS=8

# Admin User (optional, for initial setup)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password

# Optional: CDN Configuration
DISCOURSE_CDN_URL=https://cdn.yourcompany.com

# Optional: Additional Security
# DISCOURSE_CORS_ORIGIN=https://yourcompany.com
