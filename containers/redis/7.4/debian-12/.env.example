# Environment Configuration for Production Redis Deployment
# Copy this file to .env and configure your values

# Build information (optional)
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")

# Security Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Memory Management
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Persistence Configuration
REDIS_AOF_ENABLED=yes
REDIS_AOF_FSYNC=everysec
REDIS_SAVE="900 1 300 10 60 10000"

# Performance Settings
REDIS_LOGLEVEL=notice

# Sentinel Configuration (for HA setup)
REDIS_SENTINEL_MASTER_NAME=mymaster
REDIS_SENTINEL_QUORUM=1
REDIS_SENTINEL_DOWN_AFTER=30000
REDIS_SENTINEL_FAILOVER_TIMEOUT=180000

# Optional: TLS Configuration
# REDIS_TLS_ENABLED=true
# REDIS_TLS_PORT=6380
# REDIS_TLS_CERT_FILE=/etc/redis/tls/redis.crt
# REDIS_TLS_KEY_FILE=/etc/redis/tls/redis.key
# REDIS_TLS_CA_CERT_FILE=/etc/redis/tls/ca.crt